<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:textSize="60sp"
        android:text="<Login>"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="ID : "
            android:layout_margin="10sp"/>

        <EditText
            android:id="@+id/id_edit"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="ID here"
            android:layout_toRightOf="@id/id_txt" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/pw_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="PW : "
            android:layout_margin="10sp"/>

        <EditText
            android:id="@+id/pw_edit"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="PW here"
            android:password="true"
            android:layout_toRightOf="@id/pw_txt" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_centerHorizontal="true"
        android:layout_margin="20sp">

        <Button
            android:id="@+id/login_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_margin="10sp"
            android:onClick="login_b_clicked"/>

        <Button
            android:id="@+id/signin_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sign in"
            android:layout_margin="10sp"
            android:layout_toRightOf="@+id/login_b"
            android:onClick="signin_b_clicked"/>


    </RelativeLayout>

</RelativeLayout>