<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/signin_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:textSize="60sp"
        android:text="Sign in"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:layout_below="@id/signin_logo"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="ID : "
            android:layout_margin="10sp"/>

        <EditText
            android:id="@+id/id_edit"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint=" ID here"
            android:layout_toRightOf="@id/id_txt" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_below="@id/layout1"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/pw_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="PW : "
            android:layout_margin="10sp"/>

        <EditText
            android:id="@+id/pw_edit"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint=" PW here"
            android:layout_toRightOf="@id/pw_txt"
            android:password="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_below="@id/layout2"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/pwc_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="PWC : "
            android:layout_margin="10sp"/>

        <EditText
            android:id="@+id/pwc_edit"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="Confirm Password"
            android:layout_toRightOf="@id/pwc_txt"
            android:password="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout3"
        android:layout_centerHorizontal="true"
        android:layout_margin="20sp">

        <Button
            android:id="@+id/signup_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:layout_margin="10sp"
            android:onClick="signup_b_clicked"/>

        <Button
            android:id="@+id/cancel_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:layout_margin="10sp"
            android:layout_toRightOf="@+id/signup_b"
            android:onClick="cancel_b_clicked"/>


    </RelativeLayout>

</RelativeLayout>